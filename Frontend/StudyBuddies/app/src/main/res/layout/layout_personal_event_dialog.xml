<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/eventMessageEditText"
        android:layout_width="325dp"
        android:layout_height="263dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Enter event message"
        android:inputType="textMultiLine"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectTimeButton" />

    <Button
        android:id="@+id/selectTimeButton"
        android:layout_width="325dp"
        android:layout_height="58dp"
        android:layout_marginTop="12dp"
        android:background="@color/teal_darker"
        android:text="Select Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPersonalEventTitleTextView" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:background="@color/teal_darker"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="@+id/eventMessageEditText"
        app:layout_constraintTop_toBottomOf="@+id/eventMessageEditText" />

    <Button
        android:id="@+id/enterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/teal_darker"
        android:text="Enter"
        app:layout_constraintEnd_toEndOf="@+id/eventMessageEditText"
        app:layout_constraintTop_toBottomOf="@+id/eventMessageEditText" />

    <TextView
        android:id="@+id/newPersonalEventTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="New Personal Event"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>